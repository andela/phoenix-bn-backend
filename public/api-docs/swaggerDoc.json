        }
    },
    "basePath": "/",
    "tags": [
        {
            "name": "Request",
            "description": "Access to WeTravel orders"
        },
        {
            "name": "User",
            "description": "Operations on WeTravel User"
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/api/v1/request": {
            "post": {
                "tags": [
                    "Request"
                ],
                "summary": "Create a booking order",
                "description": "Returns a map of status codes to quantities",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "Required fields",
                        "description": "Required field",
                        "schema": {
                            "type": "object",
                            "required": [
                                "userName"
                            ],
                            "properties": {
                                "price_offered": {
                                    "type": "integer"
                                },
                                "buyer": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Request"
                        }
                    },
                    "400": {
                        "description": "Invalid"
                    }
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        },
        "/api/v1/auth/signin": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signup",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "johndoe@company.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "400": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/v1/auth/signup": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Admin create a new user",
                "description": "Allows an admin to create a new user",
                "operationId": "CreateUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "johndoe@company.com"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "409": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/api/v1/auth/user/update-profile": {
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "Users profile settings",
                "description": "User gets a user profile upon successful registration to wetravel and is able to update/edit",
                "operationId": "CreateUserProfile",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "firstName": {
                                    "type": "string",
                                    "example": "john"
                                },
                                "lastName": {
                                    "type": "string",
                                    "example": "doe"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password"
                                },
                                "gender": {
                                    "type": "string",
                                    "example": "male"
                                },
                                "lineManager": {
                                    "type": "string",
                                    "example": "Williams Doe"
                                },
                                "preferredCurrency": {
                                    "type": "string",
                                    "example": "$"
                                },
                                "preferredLanguage": {
                                    "type": "string",
                                    "example": "English"
                                },
                                "department": {
                                    "type": "string",
                                    "example": "IT"
                                },
                                "birthDate": {
                                    "type": "string",
                                    "example": "14/10/1990"
                                },
                                "residenceAddress": {
                                    "type": "string",
                                    "example": "14, Jeremiah Ugwu, Lekki, Lagos"
                                },
                                "phoneNumber": {
                                    "type": "integer",
                                    "example": "08012345678"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "Unsuccessfu, User not found"
                    },
                    "500": {
                        "description": "Internal Server error"
                    }
                }
            }
        },
        "/api/v1/auth/user/google/signin": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system via google",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "url":{
                                "type": "string",
                                "example": "https://accounts.google.com/o/oauth2/v2/auth?access_type=offline&prompt=consen"
                                }
                                
                            }
                        }
                    },
                    "500": {
                        "description": "error message"
                    }
                }
            }
        },
        "/api/v1/auth/user/linkendin/signin": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system via Linkedin",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "url":{
                                "type": "string",
                                "example": "https://www.linkedin.com/uas/oauth2/authorization?response_type=code&client_id=86h0yv5ea8q7ti"
                                }
                           }
                        }
                    },
                    "500": {
                        "description": "error message"
                    }
                }
            }
        },
        "/api/v1/auth/google/callback": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "redirect route for Google to Log user into the system",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signin",
                        "schema": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/v1/trip": {
            "post": {
                "tags": [
                    "Trip"
                ],
                "summary": "Make a one way trip",
                "description": "Allows a user to make a one way trip",
                "operationId": "CreateTrip",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "trip",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "origin": {
                                    "type": "string",
                                    "example": "Lagos"
                                },
                                "destination": {
                                    "type": "string",
                                    "example": "Abuja"
                                },
                                "travelDate": {
                                    "type": "date",
                                    "example": "2019-11-08"
                                },
                                "travelReasons": {
                                    "type": "string",
                                    "example": "For Assignment"
                                },
                                "accommodation": {
                                    "type": "string",
                                    "example": "Protea"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "406": {
                        "description": "Invalid date"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/api/v1/auth/linkedin/callback": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Linkedin redirect route to Log user into the system",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signin",
                        "schema": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "token",
            "in": "header"
        }
    },
    "definitions": {
        "Request": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "price": {
                    "type": "integer",
                    "description": "price offered",
                    "example": "500,000.00"
                },
                "created_on": {
                    "type": "string",
                    "format": "date-time"
                },
                "status": {
                    "type": "string",
                    "description": "Order Status",
                    "enum": [
                        "pending",
                        "accepted",
                        "rejected"
                    ],
                    "example": "pending"
                }
            },
            "xml": {
                "name": "Order"
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "firstName": {
                    "type": "string",
                    "example": "John"
                },
                "lastName": {
                    "type": "string",
                    "example": "Doe"
                },
                "email": {
                    "type": "string",
                    "example": "johndoe@company.com"
                },
                "password": {
                    "type": "string"
                },
                "residencAddress": {
                    "type": "string",
                    "description": "residence address of the user"
                },
                "department": {
                    "type": "string",
                    "description": "User department"
                },
                "lineManager": {
                    "type": "string",
                    "description": "line manager to the user"
                },
                "gender": {
                    "type": "string",
                    "description": "User gender"
                },
                "phoneNumber": {
                    "type": "integer",
                    "description": "Phone number of user"
                },
                "role": {
                    "type": "string",
                    "description": "User role"
                },
                "preferredLanguage": {
                    "type": "string",
                    "description": "User preferred language"
                },
                "preferredCurrency": {
                    "type": "string",
                    "description": "User preferred currency"
                }
            },
            "xml": {
                "name": "User"
            }
        },
        "externalDocs": {
            "description": "Find out more on WeTravel site",
            "url": "https://github.com/andela/phoenix-bn-backend"
        }
    }
