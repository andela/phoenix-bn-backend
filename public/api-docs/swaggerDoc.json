{
    "swagger": "2.0",
    "info": {
        "description": "#### WeTravel\n #### WeTravel is an application that will enable its Company Staff book their international travel and accommodation globally; easily and conveniently across all the locations/centers where the Company has its operations. \n\n #### While early travel tended to be slower, more dangerous, and more dominated by trade and migration, WeTravel uses cultural and technological advances to make travel become easier and more accessible.",
        "version": "1",
        "title": "WeTravel",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "vokeolomu@yahoo.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "basePath": "/",
    "tags": [
        {
            "name": "Request",
            "description": "Access to WeTravel orders"
        },
        {
            "name": "User",
            "description": "Operations on WeTravel User"
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/api/v1/request": {
            "post": {
                "tags": [
                    "Request"
                ],
                "summary": "Create a booking order",
                "description": "Returns a map of status codes to quantities",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "Required fields",
                        "description": "Required field",
                        "schema": {
                            "type": "object",
                            "required": [
                                "userName"
                            ],
                            "properties": {
                                "price_offered": {
                                    "type": "integer"
                                },
                                "buyer": {
                                    "type": "string"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Request"
                        }
                    },
                    "400": {
                        "description": "Invalid"
                    }
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        },
        "/api/v1/auth/signin": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system",
                "description": "Logs user into the system",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signin",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "johndoe@company.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "password"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/SignedUser"
                        }
                    },
                    "422": {
                        "description": "invalid email",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "422",
                                "error": "no email provided"
                            }
                        }
                    },
                    "401": {
                        "description": "wrong password",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "401",
                                "error": "Invalid email/password"
                            }
                        }
                    },
                    "404": {
                        "description": "email not in database",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "404",
                                "error": "User does not exist"
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/signup": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Admin create a new user",
                "description": "Allows an admin to create a new user",
                "operationId": "CreateUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "johndoe@company.com"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "409": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/api/v1/auth/user/google/signin": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system via google",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "url":{
                                "type": "string",
                                "example": "https://accounts.google.com/o/oauth2/v2/auth?access_type=offline&prompt=consen"
                                }
                                
                            }
                        }
                    },
                    "500": {
                        "description": "error message"
                    }
                }
            }
        },
        "/api/v1/auth/user/linkendin/signin": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Logs user into the system via Linkedin",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "url":{
                                "type": "string",
                                "example": "https://www.linkedin.com/uas/oauth2/authorization?response_type=code&client_id=86h0yv5ea8q7ti"
                                }
                           }
                        }
                    },
                    "500": {
                        "description": "error message"
                    }
                }
            }
        },
        "/api/v1/auth/google/callback": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "redirect route for Google to Log user into the system",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signin",
                        "schema": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/v1/trip": {
            "post": {
                "tags": [
                    "Trip"
                ],
                "summary": "Make a one way trip",
                "description": "Allows a user to make a one way trip",
                "operationId": "CreateTrip",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "trip",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "origin": {
                                    "type": "string",
                                    "example": "Lagos"
                                },
                                "destination": {
                                    "type": "string",
                                    "example": "Abuja"
                                },
                                "travelDate": {
                                    "type": "date",
                                    "example": "2019-11-08"
                                },
                                "travelReasons": {
                                    "type": "string",
                                    "example": "For Assignment"
                                },
                                "accommodation": {
                                    "type": "string",
                                    "example": "Protea"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "406": {
                        "description": "Invalid date"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/api/v1/auth/linkedin/callback": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Linkedin redirect route to Log user into the system",
                "description": "",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "signin",
                        "schema": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/api/v1/auth/remember-info": {
            "patch": {
                "tags": [
                    "User"
                ],
                "summary": "user remember info",
                "description": "Allows a user to remember his info for future requests",
                "operationId": "rememberInfo",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "user",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "rememberInfo": {
                                    "type": "string",
                                    "example": true
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Success"
                        }
                    }
                }
            }
        },
        "/api/v1/role": {
            "post": {
                "tags": [
                    "Role"
                ],
                "summary": "user's role",
                "description": "sets a role for an existing user",
                "operationId": "createRole",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "email",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "createRole": {
                                    "$ref": "#/definitions/CreateRole"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "successful operation",
                        "schema": {
                            "$ref": "#/definitions/Role"
                        }
                    },
                    "403": {
                        "description": "unauthorized access",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "403",
                                "error": "You are not allowed to perform this operation"
                            }
                        }
                    },
                    "422": {
                        "description": "invalid email",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "422",
                                "error": "no email provided"
                            }
                        }
                    },
                    "409": {
                        "description": "role already exist for user with provided email",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "409",
                                "error": "User already has this role"
                            }
                        }
                    },
                    "404": {
                        "description": "email not in database",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": "404",
                                "error": "User does not exist"
                            }
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "token",
            "in": "header"
        }
    },
    "definitions": {
        "Request": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "price": {
                    "type": "integer",
                    "description": "price offered",
                    "example": "500,000.00"
                },
                "created_on": {
                    "type": "string",
                    "format": "date-time"
                },
                "status": {
                    "type": "string",
                    "description": "Order Status",
                    "enum": [
                        "pending",
                        "accepted",
                        "rejected"
                    ],
                    "example": "pending"
                }
            },
            "xml": {
                "name": "Order"
            }
        },
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "token": {
                    "type": "integer",
                    "format": "int64"
                },
                "first_name": {
                    "type": "string",
                    "example": "John"
                },
                "last_name": {
                    "type": "string",
                    "example": "Doe"
                },
                "email": {
                    "type": "string",
                    "example": "johndoe@company.com"
                },
                "password": {
                    "type": "string"
                },
                "address": {
                    "type": "string",
                    "description": "Address of WeTravel User"
                }
            },
            "xml": {
                "name": "User"
            }
        },
        "AddUser": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string",
                    "example": "John"
                },
                "lastName": {
                    "type": "string",
                    "description": "User's first name",
                    "example": "Doe"
                },
                "email": {
                    "type": "string",
                    "description": "User's email",
                    "example": "johndoe@company.com"
                },
                "password": {
                    "type": "string",
                    "description": "User's password",
                    "exmaple": "45678hpkfg45"
                },
                "phoneNumber": {
                    "type": "string",
                    "description": "Address of WeTravel User",
                    "example": "09023232322"
                }
            }
        },
        "SigninUser": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "johndoe@mail.com"
                },
                "password": {
                    "type": "string",
                    "description": "User password",
                    "example": "45678hpkfg45"
                }
            }
        },
        "SignedUser": {
            "type": "object",
            "properties": {
                "token": {
                    "$ref": "#/definitions/Token"
                }
            }
        },
        "Token": {
            "type": "string",
            "description": "Authentication token",
            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6NCwiZW1haWwiOiJ0aG9ueUBnbWFpbC5jb20iLCJpc0FkbWluIjpmYWxzZSwiaWF0IjoxNTYxMTYyMTY0LCJleHAiOjE1NjEyNDg1NjR9.jx2qbXyui03Dhb9F8iwwbMel9LMYIShLYr5Y5y94BtU"
        },
        "email": {
            "type": "string",
            "description": "user email",
            "example": "johndoe@company.com"
        },
        "role": {
            "type": "string",
            "description": "user role",
            "example": "Requester, Super Administator, Manager"
        },
        "Role": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "role id",
                    "example": "2"
                },
                "userId": {
                    "type": "integer",
                    "description": "user id of the owner of the role",
                    "example": "9"
                },
                "userEmail": {
                    "$ref":"#/definitions/email"
                },
                "roleName": {
                    "$ref":"#/definitions/role"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "updatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "CreateRole": {
            "type": "object",
            "properties": {
                "email": {
                    "$ref": "#/definitions/email"
                },
                "role": {
                    "$ref":"#/definitions/role"
                }
            }
        },
        "Success": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "description": "success"
                }
            },
            "xml": {
                "name": "Success"
            }
        },
        "externalDocs": {
            "description": "Find out more on WeTravel site",
            "url": "https://github.com/andela/phoenix-bn-backend"
        }
    }
}
